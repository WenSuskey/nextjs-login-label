{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES6",
      "ES2020"
    ],
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES6",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "experimentalDecorators": true,
    "incremental": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "exclude": [
    ".next",
    ".vscode",
    "node_modules",
    "public",
    "**/*.js",
    "**/*.jsx"
  ],
  // .jpeg here is temporary until we know the exact format of the images
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ]
}